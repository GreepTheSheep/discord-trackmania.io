// Set the command here, it's what we'll type in the message
exports.name = 'ping';

// Set the description here, this is what will show up when you need help for the command
exports.description = 'Shows the delay between the program and the websocket';

// Set the command arguments here, this is what will show up when you type the command
exports.args = [
    {
        name: 'message',
        description: 'The message to send',
        type: 'string',
        required: false,
        choices: [
            {
                name: 'Utilities',
                value: 'utils'
            }
        ]
    }
];

// Set the usage here, this is what will show up when you type the command
// This part is executed as slash command
exports.execute = async (interaction) => {
    interaction.reply('Pong! ' + interaction.client.ws.ping + 'ms (Web Socket)');
};

// This part is executed as a normal message command
exports.executeMessage = async (message) => {
    message.reply('Pong! '  + message.client.ws.ping + 'ms (Web Socket)');
};